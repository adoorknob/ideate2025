---
import Header from '../components/layout/header/Header';
import Footer from '../components/layout/footer/Footer';
import { ClientRouter } from "astro:transitions";
import '@fontsource/peace-sans';
import '@fontsource/poppins/100';
import '@fontsource/poppins/200';
import '@fontsource/poppins/300';
import '@fontsource/poppins/400';
import '@fontsource/poppins/500';
import '@fontsource/poppins/600';
import '@fontsource/poppins/700';
import '@fontsource/poppins/800';
import '@fontsource/poppins/900';
import '/src/styles/global.css';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#27272a" />
		<link rel="icon" type="image/svg+xml" href="/bulb_favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>IDEATE 2025</title>
		<ClientRouter transition:animate="none"/>
	</head>
	<body class="min-h-screen flex flex-col">
		<Header client:load/> 
		<main class="flex-grow">
			<slot />
		</main>
		<Footer/>
	</body>
</html>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.20.1/cdn/themes/light.css" />
<script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.20.1/cdn/shoelace-autoloader.js"></script>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		/* background-image: url('/src/assets/temp_bg.png'); */
		background-color: #283BBB;
		background-attachment: fixed;
		background-repeat: no-repeat;
		background-position: center 0px;
		background-size: cover;
		font-family: 'Poppins', Helvetica, sans-serif;
	}

	.white-text-outline {
		text-shadow: 
			1px 1px 0 white, 
			-1px -1px 0 white,
			1px -1px 0 white,
			-1px 1px white;
	}
	
	.blue-text-outline {
		-webkit-text-stroke: 2px #1C34D4; /* Outline with 2px black stroke */
        text-stroke: 2px #1C34D4; /* Fallback for other browsers */
		text-shadow: 
			2px 2px 0 y, 
			-2px -2px 0 #1C34D4,
			2px -2px 0 #1C34D4,
			-2px 2px #1C34D4,
			2px 0 0 #1C34D4, 
			-2px 0 0 #1C34D4,
			0 -2px 0 #1C34D4,
			0 2px 0 #1C34D4;
	}

	.font-peacesans {
		font-family: "Peace Sans", sans-serif;
	}
</style>
